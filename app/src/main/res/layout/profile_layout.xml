<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:paddingTop="15dp">

    <ImageView
        android:layout_height="200dp"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/jiminie"
        android:id="@+id/profPic"
        android:contentDescription="@string/profile_pic_desc"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:text="@string/profile_name"
        android:textColor="#d3bee2"
        android:layout_margin="10dp"
        android:textAllCaps="false"
        />

    <Button
        android:id="@+id/startParty"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="#787575"
        android:background="#d4d4d4"
        android:text="Start a Party!"
        android:layout_margin="15dp"
        android:onClick="onSelect" />

    <Button
        android:id="@+id/hostParty"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="#787575"
        android:background="#d4d4d4"
        android:text="Host parties"
        />

    <Button
        android:id="@+id/invitations"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:textSize="20sp"
        android:textColor="#787575"
        android:background="#d4d4d4"
        android:layout_margin="15dp"
        android:text="Invitations"
        />

</LinearLayout>